<% if flash[:error] %>
    <% flash[:error].each do |err| %>
        <%= err%>
    <% end%>
<% end%>


<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :ingredients %>
<%= f.text_area :ingredients %>
<br>
<%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
<br>
<%= f.submit "Submit Order" %>
<% end %>