<% if flash[:errors]%>
<%flash[:errors].each do |error|%>
<%= error %>
<%end%>
<%end%>

<%= form_for @pizza do |f|%>
<%= f.label :name  %>
<%= f.text_field :name%>
<%= f.label :ingredients %>
<%= f.text_field :ingredients%>
<%= f.collection_select :restaurant_id, @restaurants, :id, :name, :address%>
<%= f.submit%>
<%end%>