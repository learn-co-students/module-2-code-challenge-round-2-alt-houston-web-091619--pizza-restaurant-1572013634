<% if flash[:errors]  %>
<% flash[:errors].each do |error| %>
<%= tag.h2 error %>
<% end %>
<% end %>


<%= form_for @pizza do |f| %>

    <%= f.label :Name %>
    <%= f.text_field :name %>
    <%= tag.br %>

    <%= f.label :Ingredients %>
    <%= f.text_field :ingredients %>
    <%= tag.br %>

    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
    <%= tag.br %>

    <%= f.submit "Create New Pizza" %>





<% end%>